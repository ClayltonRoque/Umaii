<div class="container mx-auto py-8">
    <div class="w-full">
        <div class="flex items-center justify-between mb-8">
            <h1 class="text-3xl font-bold text-gray-800">Pedidos</h1>
            <%= link_to 'Novo Pedido', new_order_path, class: 'px-5 py-2 bg-green-600 text-white rounded font-semibold shadow hover:bg-green-700 transition' %>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% @orders.each do |order| %>
                        <div class="bg-white rounded-xl shadow p-6 flex flex-col gap-2 border border-gray-100">
                            <div class="flex items-center justify-between">
                                <span class="text-xs text-gray-400">#<%= order.id %></span>
                                <span class="px-2 py-1 rounded text-xs font-semibold <%= order.order_status == 'finalizado' ? 'bg-green-100 text-green-700' : 'bg-yellow-100 text-yellow-700' %>">
                                    <%= order.order_status || '-' %>
                                </span>
                            </div>
                            <div class="mt-2 flex flex-col gap-1">
                                <div>
                                    <span class="text-gray-700 font-medium">Tipo:</span>
                                    <span class="text-gray-900"><%= order.type_order || '-' %></span>
                                </div>
                                <div>
                                    <span class="text-gray-700 font-medium">Cliente:</span>
                                    <span class="text-gray-900"><%= order.user&.name || '-' %></span>
                                </div>
                                <div>
                                    <span class="text-gray-700 font-medium">Motorista:</span>
                                    <span class="text-gray-900"><%= order.driver&.name || '-' %></span>
                                </div>
                            </div>
                            <div class="flex justify-end mt-4">
                                <%= link_to 'Ver detalhes', order_path(order), class: 'px-4 py-1 bg-primary-base text-white rounded hover:bg-primary-dark transition text-sm font-semibold' %>
                            </div>
                        </div>
            <% end %>
        </div>
        <% if @orders.empty? %>
            <div class="text-center text-gray-400 mt-12">Nenhum pedido encontrado.</div>
        <% end %>
    </div>
</div>