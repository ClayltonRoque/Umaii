
<div class="flex flex-col justify-center items-center w-screen">
  <div class="w-full max-w-xl">
    <% if notice %>
      <div class="mb-4 px-4 py-2 bg-green-100 text-green-800 rounded shadow text-center">
        <%= notice %>
      </div>
    <% end %>
    <div class="bg-white rounded-xl shadow p-8 border border-gray-100">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-2xl font-bold text-gray-800">Detalhes do Pedido</h1>
        <span class="text-xs text-gray-400">#<%= @order.id %></span>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
        <div>
          <span class="text-gray-700 font-medium">Tipo:</span>
          <span class="text-gray-900"><%= @order.type_order || '-' %></span>
        </div>
        <div>
          <span class="text-gray-700 font-medium">Status:</span>
          <span class="px-2 py-1 rounded text-xs font-semibold <%= @order.order_status == 'finalizado' ? 'bg-green-100 text-green-700' : 'bg-yellow-100 text-yellow-700' %>">
            <%= @order.order_status || '-' %>
          </span>
        </div>
        <div>
          <span class="text-gray-700 font-medium">Cliente:</span>
          <span class="text-gray-900"><%= @order.user&.name || '-' %></span>
        </div>
        <div>
          <span class="text-gray-700 font-medium">Motorista:</span>
          <span class="text-gray-900"><%= @order.driver&.name || '-' %></span>
        </div>
        <div class="md:col-span-2">
          <span class="text-gray-700 font-medium">Endereço de partida:</span>
          <span class="text-gray-900"><%= @order.departure_address %></span>
        </div>
        <div class="md:col-span-2">
          <span class="text-gray-700 font-medium">Endereço de destino:</span>
          <span class="text-gray-900"><%= @order.destination_address %></span>
        </div>
        <div>
          <span class="text-gray-700 font-medium">Valor:</span>
          <span class="text-gray-900"><%= number_to_currency(@order.order_value, unit: 'R$ ', separator: ',', delimiter: '.') if @order.order_value %></span>
        </div>
        <div>
          <span class="text-gray-700 font-medium">Solicitado em:</span>
          <span class="text-gray-900"><%= l(@order.request_time, format: :short) if @order.request_time %></span>
        </div>
        <div>
          <span class="text-gray-700 font-medium">Aceito em:</span>
          <span class="text-gray-900"><%= l(@order.accept_time, format: :short) if @order.accept_time %></span>
        </div>
        <div>
          <span class="text-gray-700 font-medium">Finalizado em:</span>
          <span class="text-gray-900"><%= l(@order.finished_time, format: :short) if @order.finished_time %></span>
        </div>
      </div>
      <div class="flex flex-col sm:flex-row gap-4 w-full justify-center">
        <%= link_to "Editar", edit_order_path(@order), class: 'px-4 py-2 bg-blue-600 text-white rounded font-semibold hover:bg-blue-700 transition' %>
        <%= link_to "Voltar", orders_path, class: 'px-4 py-2 bg-gray-200 text-gray-800 rounded font-semibold hover:bg-gray-300 transition' %>
        <%= button_to "Excluir", @order, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'px-4 py-2 bg-red-600 text-white rounded font-semibold hover:bg-red-700 transition' %>
      </div>
    </div>
  </div>
</div>
