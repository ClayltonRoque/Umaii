<div class="flex justify-center items-center w-screen">
  <div class="w-full max-w-md bg-white rounded-xl shadow-md p-8 mt-10">
     <h2 class="text-3xl font-bold mb-2 text-center">Entrar no Umaii</h2>
    <p class="mb-6 text-center text-gray-500">Faça login para acessar sua conta</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
     <%= f.label :login, 'E-mail ou nome', class: 'block text-sm font-medium text-gray-700' %>
<%= f.text_field :login, placeholder: 'Seu e-mail ou nome', autofocus: true, autocomplete: "username", class: 'mt-1 block w-full rounded border-gray-300 shadow-sm' %>
      </div>

      <div class="mb-4">
        <%= f.label :password, 'Senha', class: 'block text-sm font-medium text-gray-700' %>
        <%= f.password_field :password, placeholder: 'Sua senha', autocomplete: "current-password", class: 'mt-1 block w-full rounded border-gray-300 shadow-sm' %>
      </div>

      <div class="flex justify-center">
        <%= f.submit "Entrar", class: 'w-full px-6 py-2 bg-black text-white rounded font-semibold hover:bg-neutral-800 transition' %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <span class="text-gray-500">Não tem uma conta?</span> <%= link_to 'Cadastre-se', new_user_registration_path, class: 'font-bold text-primary-base underline' %>
    </div>
  </div>
</div>



