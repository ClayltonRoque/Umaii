
<div class="flex justify-center items-center w-screen">
  <div class="w-full max-w-md bg-white rounded-xl shadow-md p-8 mt-10">
      <h2 class="text-3xl font-bold mb-2 text-center">Criar Conta</h2>
    <p class="mb-6 text-center text-gray-500">Cadastre-se para começar a usar o Umaii</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% if resource.errors.any? %>
      <div class="mb-6 bg-red-50 border border-red-200 rounded p-4">
        <h3 class="text-red-700 font-semibold mb-2 text-sm">Erros ao criar conta:</h3>
        <ul class="list-disc list-inside text-red-600 text-sm">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <div class="mb-4">
        <%= f.label :name, 'Nome completo', class: 'block text-sm font-medium text-gray-700' %>
        <%= f.text_field :name, placeholder: 'Seu nome', autofocus: true, autocomplete: "username", class: 'mt-1 block w-full rounded border-gray-300 shadow-sm' %>
      </div>

            <div class="mb-4">
        <%= f.label :user_type, 'Tipo de usuário', class: 'block text-sm font-medium text-gray-700' %>
        <%= f.select :user_type, [['Cliente', 'cliente'], ['Motorista', 'motorista']], {}, class: 'mt-1 block w-full rounded border-gray-300 shadow-sm' %>
      </div>

      <div class="mb-4">
        <%= f.label :email, 'Email', class: 'block text-sm font-medium text-gray-700' %>
        <%= f.email_field :email, placeholder: 'seu@email.com', autocomplete: "email", class: 'mt-1 block w-full rounded border-gray-300 shadow-sm' %>
      </div>

      <div class="mb-4">
        <%= f.label :password, 'Senha', class: 'block text-sm font-medium text-gray-700' %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-500">Mínimo <%= @minimum_password_length %> caracteres</em>
        <% end %>
        <%= f.password_field :password, placeholder: 'Mínimo 6 caracteres', autocomplete: "new-password", class: 'mt-1 block w-full rounded border-gray-300 shadow-sm' %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, 'Confirmar senha', class: 'block text-sm font-medium text-gray-700' %>
        <%= f.password_field :password_confirmation, placeholder: 'Confirme sua senha', autocomplete: "new-password", class: 'mt-1 block w-full rounded border-gray-300 shadow-sm' %>
      </div>

      <div class="flex justify-center">
        <%= f.submit "Criar conta", class: 'w-full px-6 py-2 bg-black text-white rounded font-semibold hover:bg-neutral-800 transition' %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <span class="text-gray-500">Já tem uma conta?</span> <%= link_to 'Fazer login', new_user_session_path, class: 'font-bold text-primary-base underline' %>
    </div>
  </div>
</div>



