<%= form_with(model: @user, validate: true, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 border border-red-300 rounded">
      <h2 class="font-semibold text-red-700 mb-2"><%= pluralize(@user.errors.count, "erro") %> impediram o salvamento:</h2>
      <ul class="list-disc list-inside text-red-600">
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block font-medium mb-1" %>
    <%= form.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div class="mb-4">
    <%= form.label :email, class: "block font-medium mb-1" %>
    <%= form.email_field :email, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>

  <div class="mb-4">
    <%= form.label :user_type, class: "block font-medium mb-1" %>
    <%= form.select :user_type, [['Cliente', 'cliente'], ['Motorista', 'motorista']], {}, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>


  <div class="mb-4">
    <%= form.label :password, class: "block font-medium mb-1" %>
    <%= form.password_field :password, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400", autocomplete: "new-password" %>
  </div>

  <div class="mb-4">
    <%= form.label :password_confirmation, 'Confirmar senha', class: "block font-medium mb-1" %>
    <%= form.password_field :password_confirmation, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400", autocomplete: "new-password" %>
  </div>

  <div class="mt-6">
    <%= form.submit class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 font-semibold transition" %>
  </div>
<% end %>
