
<div class="flex flex-col justify-center items-center w-screen">
  <% if notice %>
    <div class="mb-4 px-4 py-2 bg-green-100 text-green-800 rounded shadow text-center w-full max-w-lg">
      <%= notice %>
    </div>
  <% end %>

  <div class="w-full max-w-lg bg-white rounded-xl shadow-md p-8 mb-6">
    <h2 class="text-2xl font-bold mb-4 text-center text-gray-800">Dados do Usuário</h2>
    <%= render @user %>

     <div class="w-full max-w-lg flex flex-col items-center mt-8">
    <div class="flex flex-col sm:flex-row gap-4 w-full justify-center">
      <%= link_to "Editar usuário", edit_user_path(@user), class: 'px-4 py-2 bg-blue-600 text-white rounded shadow hover:bg-blue-700 transition text-center' %>
      <%= link_to "Voltar para lista", users_path, class: 'px-4 py-2 bg-gray-300 text-gray-800 rounded shadow hover:bg-gray-400 transition text-center' %>
    </div>
  </div>
  </div>
</div>



